<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddMentorFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_mentor_add"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="Yangi mentor qo'shish"
        app:titleTextColor="@color/white" >

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/mentor_surname"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edit_back"
        android:hint="Familyasi"
        android:paddingStart="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_mentor_add" />

    <EditText
        android:id="@+id/mentor_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edit_back"
        android:hint="Ismi"
        android:paddingStart="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentor_surname" />

    <EditText
        android:id="@+id/mentor_father"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edit_back"
        android:hint="Otasining ismi"
        android:paddingStart="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentor_name" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/main"
        android:text="Qo'shish"
        app:cornerRadius="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>